<%= t(:search_result) %>

<% if @result.any? %>
    <% @result.each do |item| %>
        <div>
            <% if item.is_a?(Dish)%>
                <%= image_tag(url_for(item.picture), alt: 'Foto do prato', width: 200, height: 200) if item.picture.attached? %>
            <% else %>
                <%= image_tag(url_for(item.picture), alt: 'Foto do produto', width: 200, height: 200) if item.picture.attached? %>
            <% end %>
            <p><%= Dish.human_attribute_name(:name) %>: <%= item.name %> </p>
            <p><%= Dish.human_attribute_name(:description) %>: <%= item.description %> </p>
            <%= link_to t(:see_details), establishment_dish_path(item) %>
        </div>
    <% end %>
<% else %>
    <p><%= t(:nothing_found) %></p>
<% end %>