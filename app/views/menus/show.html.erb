<% if !current_order.nil? %>
    <p>Pedido Atual: <%= current_order.name %></p>
    <%= link_to t(:finalize_order), confirm_order_establishment_orders_path %>
<% end %>

<nav>
    <%= link_to t(:create_new_order), new_establishment_order_path %>
    <%= link_to t(:continue_with_open_order), continue_order_establishment_path %>
</nav>

<h1><%= @menu.name %></h1>

<div>
    <h2><% t(:dishes) %></h2>
    <dl>
        <% @menu.dishes.active.each do |item| %>
            <dt><%= item.name %></dt>
            <% if item.portions.any? %>
                <% item.portions.each do |portion| %>
                    <dd id="<%= dom_id(item) %>">
                        <p><%= t(:description) %>:<%= portion.description %></p>
                        <p><%= t(:price) %>:<%= number_to_currency(portion.price) %></p>
                        <% if !current_order.nil?%>
                            <%= link_to t(:add_order),  new_establishment_menu_order_item_path(@menu, portion_id: portion.id)%>
                        <% else %>
                            <%= link_to t(:add_order),  new_establishment_order_path%>
                        <% end %>
                    </dd>
                <% end %>
            <% else %>
                <dd><%= t(:dont_have_portions) %></dd>
            <% end %>
        <% end %>
    </dl>
</div>
<div>
    <h2><% t(:beverages) %></h2>
    <dl>
        <% @menu.beverages.active.each do |item| %>
            <dt><%= item.name %></dt>
            <% item.portions.each do |portion| %>
                <dd id="<%= dom_id(item) %>">
                    <p><%= t(:description) %>:<%= portion.description %></p>
                    <p><%= t(:price) %>:<%= number_to_currency(portion.price) %></p>
                    <% if !current_order.nil?%>
                        <%= link_to t(:add_order),  new_establishment_menu_order_item_path(@menu, portion_id: portion.id)%>
                    <% else %>
                        <%= link_to t(:add_order),  new_establishment_order_path%>
                    <% end %>
                </dd>
            <% end %>
        <% end %>
    </dl>
</div>