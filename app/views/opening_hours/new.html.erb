        <div>
            <%= f.label :closed_on_sunday, t(:closed)%>
            <%= f.check_box :closed_on_sunday, name: 'opening_hour[sunday][closed]' %>
        </div>
    </div>
    <%= f.submit t(:save) %>
<% end %>