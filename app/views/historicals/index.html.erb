<h1><%= t(:historical) %></h1>

<table>
    <thead>
        <tr>
            <th><%= t(:date_of_change)%></th>
            <th><%= t(:price)%></th>
        </tr>
    </thead>
    <tbody>
        <% @historicals.each do |historical| %>
            <tr>
                <td><%= l(historical.date_of_change) %></td>
                <td><%= number_to_currency(historical.price) %></td>
            </tr>
        <% end %>
    </tbody>
</table>