<%= link_to t(:register_dish), new_establishment_dish_path %>

<% @dishes.each do |dish| %>
    <div>
        <%= image_tag(url_for(dish.picture), alt: 'Foto do prato', width: 200, height: 200) if dish.picture.attached? %>
        <p><%= dish.translated_name %>: <%= link_to dish.name, establishment_dish_path(establishment_id: dish.establishment.id, id: dish.id) %></p>
        <p><%= dish.translated_description %>: <%= dish.description %></p>
        <p><%= t(:status) %>: <%= dish.translated_status %></p>
        <% if !dish.marker.nil? %>
            <p><%= dish.marker.description %></p>
        <% end %>
    </div>
<% end %>
