<div>
    <div>
        <%= link_to t(:edit), edit_establishment_dish_path(establishment_id: @dish.establishment.id, id: @dish.id) %>
        <%= button_to t(:delete), establishment_dish_path(establishment_id: @dish.establishment.id, id: @dish.id), method: :delete %>
    </div>

    <%= image_tag(url_for(@dish.picture), alt: 'Foto do prato', width: 200, height: 200) if @dish.picture.attached? %>
    <p><%= @dish.translated_name %>: <%= @dish.name %></p>
    <p><%= @dish.translated_description %>: <%= @dish.description %></p>
    <p><%= @dish.translated_calorie %>: <%= @dish.calorie %></p>
    <div>
        <p><%= t(:status) %>: <%= @dish.translated_status %></p>

        <% if @dish.active?%>
            <%= button_to 'Desativar', status_establishment_dish_path(@dish.establishment.id, @dish.id) %>
        <% else %>
            <%= button_to 'Ativar', status_establishment_dish_path(@dish.establishment.id, @dish.id) %>
        <% end %>
    </div>

</div>

<section>
    <div>
        <h3><%= t(:portions) %></h3>
        <%= link_to t(:register_portion), new_establishment_dish_portion_path(establishment_id: @dish.establishment.id, dish_id: @dish.id) %>
    </div>
    <table class="hitorical_table">
        <thead>
            <tr>
                <th><%= t(:description) %></th>
                <th><%= t(:price) %></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @portions.each do |p| %>
                <tr>
                    <td><%= p.description %></td>
                    <td><%= format("%.2f", p.price) %></td>
                    <td><%= link_to t(:edit),  edit_establishment_dish_portion_path(establishment_id: @dish.establishment.id, dish_id: @dish.id) %></td>
                    <% if p.historicals.any?%>
                        <td><%= link_to t(:view_historical),  establishment_dish_portion_historicals_path(establishment_id: @dish.establishment.id, dish_id: @dish.id, portion_id: p.id)%></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</section>